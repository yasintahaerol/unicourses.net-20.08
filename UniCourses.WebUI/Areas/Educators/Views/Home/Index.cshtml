                        <h3>@Model.Educator.TotalStudent</h3>

                        <p>Öğrenci</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-6">
