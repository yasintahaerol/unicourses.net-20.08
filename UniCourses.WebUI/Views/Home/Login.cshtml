@model MemberLoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/big_image_22.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">

                <div class="mb-5 element-animate">
                    <h1 class="mb-2">Giriş Yap</h1>
                    <p class="bcrumb"><a href="index.html">Anasayfa</a> <span class="sep ion-android-arrow-dropright px-2"></span>  <span class="current">Giriş Yap</span></p>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- END section -->

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap">
                    <h2 class="mb-4">Hesabına Giriş Yap</h2>
                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">Email Adresi</label>
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                <input type="text" asp-for="@Model.UserName" class="form-control py-2">
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-12 form-group">
                                <label for="name">Parola</label>
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                <input type="password" asp-for="@Model.Password" class="form-control py-2">
                            </div>
                        </div>

                        <div asp-validation-summary="ModelOnly">
                            @*
                                Şifre vs yanlış ise burada error mesajı ver.
                            *@

                        </div>


                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Login" class="btn btn-primary px-5 py-2">
                            </div>
                        </div>
                    </form>
                    @section JavaScript{
                        <script src="~/jquery-validate/jquery.validate.min.js"></script>

                        <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>

                    }
                </div>
            </div>
        </div>
    </div>
</section>

