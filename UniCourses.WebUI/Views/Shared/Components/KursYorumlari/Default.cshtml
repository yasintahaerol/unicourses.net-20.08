@model IEnumerable<UniCourses.Dal.Entities.Comment>
</UniCourses.WebUI.ViewComponents.KursYorumlari>


    <div>
        @foreach (Comment comment in Model)
        {
            if (comment.State == true)
            {
            <ul>
                <div class="row m-3">
                    <div class="col-md-10">
                        <strong class="text-info">-@comment.MemberName</strong> <span class="text-muted">@comment.CommentDate.ToShortDateString() Tarihinde Yorumladı</span>
                    </div>
                    <i>"@comment.UserComment"</i>
                    <div style="width:100%;"><p style="text-align:right;"></p></div>
                </div>
            </ul>
            }
        }
    </div>
